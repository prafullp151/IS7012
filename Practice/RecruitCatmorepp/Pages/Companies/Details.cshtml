@page
@model RecruitCatmorepp.Pages.Companies.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>@Model.Company.CompanyName</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Company.CompanyName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Company.CompanyName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Company.JobPosition)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Company.JobPosition)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Company.MinSalary)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Company.MinSalary)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Company.MaxSalary)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Company.MaxSalary)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Company.StartDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Company.StartDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Company.JobLocation)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Company.JobLocation)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Company.Industry)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Company.Industry.IndustryId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Company.CompanyAddress)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Company.CompanyAddress)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Company.AnnualRevenue)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Company.AnnualRevenue)
        </dd>
    </dl>
</div>
@if (Model.Company.Candidates.Any())
{
    <div>
        <table class="table-bordered">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Company.Candidates[0].FullName) </th>
                    <th>@Html.DisplayNameFor(model => model.Company.Candidates[0].PreferredLocation) </th>
                    <th>@Html.DisplayNameFor(model => model.Company.Candidates[0].OpenForRelocation) </th>
                    <th>@Html.DisplayNameFor(model => model.Company.Candidates[0].TargetSalary) </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Company.Candidates)
                {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.FullName) </td>
                    <td>@Html.DisplayFor(modelItem => item.PreferredLocation) </td>
                    <td>@Html.DisplayFor(modelItem => item.OpenForRelocation) </td>
                    <td>@Html.DisplayFor(modelItem => item.TargetSalary) </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="alert-warning">
        No Candidates exit for this Company
    </div>
}

<div>
    <a asp-page="./Edit" asp-route-id="@Model.Company.CompanyId">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
