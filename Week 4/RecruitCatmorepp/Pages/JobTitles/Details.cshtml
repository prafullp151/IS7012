@page
@model RecruitCatmorepp.Pages.JobTitles.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>@Model.JobTitle.Title</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.JobTitle.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.JobTitle.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.JobTitle.MinSalary)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.JobTitle.MinSalary)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.JobTitle.MaxSalary)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.JobTitle.MaxSalary)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.JobTitle.Skills)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.JobTitle.Skills)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.JobTitle.PercentTravelRequired)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.JobTitle.PercentTravelRequired)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.JobTitle.WorkHrsPerDay)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.JobTitle.WorkHrsPerDay)
        </dd>
    </dl>
</div>
@if (Model.JobTitle.Candidates.Any())
{
    <div>
        <table class="table-bordered">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.JobTitle.Candidates[0].FullName) </th>
                    <th>@Html.DisplayNameFor(model => model.JobTitle.Candidates[0].PreferredLocation) </th>
                    <th>@Html.DisplayNameFor(model => model.JobTitle.Candidates[0].OpenForRelocation) </th>
                    <th>@Html.DisplayNameFor(model => model.JobTitle.Candidates[0].TargetSalary) </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.JobTitle.Candidates)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.FullName) </td>
                        <td>@Html.DisplayFor(modelItem => item.PreferredLocation) </td>
                        <td>@Html.DisplayFor(modelItem => item.OpenForRelocation) </td>
                        <td>@Html.DisplayFor(modelItem => item.TargetSalary) </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="alert-warning">
        No Candidates exit for this JobTitles
    </div>
}

<div>
    <a asp-page="./Edit" asp-route-id="@Model.JobTitle.JobTitleId">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
