@page
@model RecruitCatmorepp.Pages.Companies.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>All Companies</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Company[0].CompanyName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Company[0].JobPosition)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Company[0].MinSalary)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Company[0].MaxSalary)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Company[0].StartDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Company[0].JobLocation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Company[0].Industry)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Company[0].AnnualRevenue)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Company) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CompanyName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.JobPosition)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MinSalary)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MaxSalary)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.JobLocation)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Industry.IndustryId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AnnualRevenue)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.CompanyId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.CompanyId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.CompanyId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
